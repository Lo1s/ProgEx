<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="4dp"
    tools:context="com.knabria.jiris.progex.DetailTransactionActivity"
    android:background="@android:color/background_light">

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/transaction_card_view"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        card_view:cardCornerRadius="5dp"
        card_view:elevation="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="16dp"
            android:background="@android:color/holo_green_light">

            <!-- TODO: Fix the hardcoded icon -->
            <ImageView
                android:id="@+id/imageview_transactiontype"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:src="@drawable/ic_arrow_back_black_36dp"/>

            <LinearLayout
                android:id="@+id/linearlayout_transactioninfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_toRightOf="@id/imageview_transactiontype"

                android:layout_marginLeft="20dp"
                >

                <!-- TODO: Fix the hardcoded amount -->
                <TextView
                    android:id="@+id/textview_amount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:text="1337 Kč"
                    style="@style/CardView_Font.TitleAmount" />

                <!-- TODO: Fix the hardcoded amount -->
                <TextView
                    android:id="@+id/textview_transfertype"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Outgoing"
                    android:layout_below="@id/textview_amount"
                    style="@style/CardView_Font.TransactionType"/>

            </LinearLayout>

            <!-- TODO: Reconsider static dimensions -->
            <LinearLayout
                android:id="@+id/linearlayout_transactiondetailinfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/linearlayout_transactioninfo"
                android:layout_alignLeft="@id/linearlayout_transactioninfo"
                android:layout_marginTop="10dp"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="10dp"
                    android:background="@drawable/rectangle" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                       <!-- TODO: Fix the hardcoded text -->
                        <TextView
                            android:id="@+id/textview_accountnumber"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingTop="5dp"
                            android:text="Account Number: "
                            style="@style/CardView_Font.TransactionDetail"/>

                        <!-- TODO: Fix the hardcoded text -->
                        <TextView
                            android:id="@+id/textview_accountname"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingTop="5dp"
                            android:text="Account Name: "
                            style="@style/CardView_Font.TransactionDetail"/>

                        <!-- TODO: Fix the hardcoded text -->
                        <TextView
                            android:id="@+id/textview_bankcode"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingTop="5dp"
                            android:text="Bank Code: "
                            style="@style/CardView_Font.TransactionDetail"/>


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginLeft="80dp">

                        <!-- TODO: Reconsider hardcoded dimmensions -->
                        <!-- TODO: Fix the hardcoded text -->
                        <TextView
                            android:id="@+id/textview_accountnumber_value"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingTop="5dp"
                            android:text="111"
                            style="@style/CardView_Font.TransactionDetail"/>

                        <!-- TODO: Fix the hardcoded text -->
                        <TextView
                            android:id="@+id/textview_accountname_value"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingTop="5dp"
                            android:text="BU"
                            style="@style/CardView_Font.TransactionDetail"/>

                        <!-- TODO: Fix the hardcoded text -->
                        <TextView
                            android:id="@+id/textview_bankcode_value"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingTop="5dp"
                            android:text="3030"
                            style="@style/CardView_Font.TransactionDetail"/>

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>
