<?xml version="1.0" encoding="utf-8"?>
<!-- TODO: Check the Theme for different APIs -->
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.knabria.jiris.progex" >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@android:style/Theme.Material" >
        <activity
            android:name=".TransactionsActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".DetailTransactionActivity"
            android:label="@string/title_activity_detail_transaction"
            android:parentActivityName=".TransactionsActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.knabria.jiris.progex.TransactionsActivity" />
        </activity>
    </application>

</manifest>
